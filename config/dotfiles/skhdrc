# focus latest display
ctrl - b : yabai -m space --focus recent

# focus space
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10


# focus window
ctrl + alt - right : yabai -m window --focus east
ctrl + alt - left : yabai -m window --focus west
ctrl + alt - up : yabai -m window --focus north
ctrl + alt - down : yabai -m window --focus sout

# swap managed window
ctrl + shift - right : yabai -m window --swap east
ctrl + shift - left : yabai -m window --swap west
ctrl + shift - up : yabai -m window --swap north
ctrl + shift - down : yabai -m window --swap south

## move managed window
#ctrl + alt + shift - right : yabai -m window --warp east
#ctrl + alt + shift - left : yabai -m window --warp west
#ctrl + alt + shift -  up : yabai -m window --warp north
#ctrl + alt + shift - down : yabai -m window --warp south

# move window to space Y
ctrl + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
ctrl + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
ctrl + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
ctrl + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4 
ctrl + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5 
ctrl + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6 
ctrl + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7 
ctrl + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8 
ctrl + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9
ctrl + shift - 0 : yabai -m window --space 10; yabai -m space --focus 10

ctrl + alt - 1 : yabai -m window --space 1
ctrl + alt - 2 : yabai -m window --space 2
ctrl + alt - 3 : yabai -m window --space 3
ctrl + alt - 4 : yabai -m window --space 4
ctrl + alt - 5 : yabai -m window --space 5
ctrl + alt - 6 : yabai -m window --space 6
ctrl + alt - 7 : yabai -m window --space 7
ctrl + alt - 8 : yabai -m window --space 8
ctrl + alt - 9 : yabai -m window --space 9
ctrl + alt - 0 : yabai -m window --space 10


# balance size of windows
ctrl + alt - 0 : yabai -m space --balance

# mirror current setup
cmd + alt - x : yabai -m space --mirror x-axis
cmd + alt - y : yabai -m space --mirror y-axis

# split
cmd + alt - s : yabai -m window --toggle split

# resize
ctrl + alt + shift - left : yabai -m window --resize left:-100:0; yabai -m window --resize right:-100:0
ctrl + alt + shift - right : yabai -m window --resize left:100:0; yabai -m window --resize right:100:0
ctrl + alt + shift - up : yabai -m window --resize top:-100:-100; yabai -m window --resize bottom:-100:-100
ctrl + alt + shift - down : yabai -m window --resize top:100:100; yabai -m window --resize bottom:100:100

# # send window to monitor and follow focus
# cmd + alt + ctrl - right : yabai -m window --display next; yabai -m display --focus next
# cmd + alt + ctrl - left : yabai -m window --display 1; yabai -m display --focus prev
# 
# set insertion point in focused container
ctrl + alt - i : yabai -m window --insert north
ctrl + alt - j : yabai -m window --insert west
ctrl + alt - k : yabai -m window --insert south
ctrl + alt - l : yabai -m window --insert east

# toggle window zoom
alt - d : yabai -m window --toggle zoom-parent
alt - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
           yabai -m window --grid 4:4:1:1:2:2

# toggle sticky(+float), topmost, picture-in-picture
alt - p : yabai -m window --toggle sticky;\
           yabai -m window --toggle topmost;\
           yabai -m window --toggle pip

ctrl - t: ~/bin/scratchpad.sh
